@model TelecomApiAnalyzer.Web.Controllers.ApiAnalyzerViewModel
@{
    ViewData["Title"] = "Telecom API Analyzer";
}

<div class="container-fluid mt-4">
    <h1 class="text-center mb-4">Telecom API Analyzer</h1>
    
    <!-- Workflow Steps -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center workflow-steps">
                <div class="step-item text-center">
                    <div class="step-icon active">
                        <i class="fas fa-upload"></i>
                    </div>
                    <small>Upload API Document</small>
                </div>
                <div class="step-divider"></div>
                <div class="step-item text-center">
                    <div class="step-icon">
                        <i class="fas fa-file-alt"></i>
                    </div>
                    <small>Analyze Document</small>
                </div>
                <div class="step-divider"></div>
                <div class="step-item text-center">
                    <div class="step-icon">
                        <i class="fas fa-code"></i>
                    </div>
                    <small>Generate Code</small>
                </div>
                <div class="step-divider"></div>
                <div class="step-item text-center">
                    <div class="step-icon">
                        <i class="fas fa-lock"></i>
                    </div>
                    <small>Authentication Details</small>
                </div>
                <div class="step-divider"></div>
                <div class="step-item text-center">
                    <div class="step-icon">
                        <i class="fas fa-user"></i>
                    </div>
                    <small>Customer Mapping</small>
                </div>
                <div class="step-divider"></div>
                <div class="step-item text-center">
                    <div class="step-icon">
                        <i class="fas fa-vial"></i>
                    </div>
                    <small>Run Tests</small>
                </div>
                <div class="step-divider"></div>
                <div class="step-item text-center">
                    <div class="step-icon">
                        <i class="fas fa-rocket"></i>
                    </div>
                    <small>Deploy</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Upload Section -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-cloud-upload-alt fa-4x text-muted"></i>
                    </div>
                    <h3 class="mb-3">Upload API Document</h3>
                    <p class="text-muted mb-4">Upload your API documentation file to begin analysis</p>
                    
                    <form asp-action="UploadDocument" method="post" enctype="multipart/form-data" id="uploadForm">
                        <div class="custom-file-upload mb-3">
                            <input type="file" class="form-control d-none" id="fileInput" name="file" 
                                   accept=".pdf,.doc,.docx,.json,.yaml,.yml" required>
                            <button type="button" class="btn btn-primary btn-lg" onclick="document.getElementById('fileInput').click()">
                                Select File
                            </button>
                        </div>
                        <div id="fileInfo" class="mb-3" style="display:none;">
                            <p class="text-success"><i class="fas fa-check-circle"></i> <span id="fileName"></span></p>
                        </div>
                        <button type="submit" class="btn btn-success btn-lg px-5" id="uploadBtn" style="display:none;">
                            <i class="fas fa-upload"></i> Upload & Analyze
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Projects -->
    @if (Model.Projects.Any())
    {
        <div class="row mt-5">
            <div class="col-12">
                <h3>Recent Projects</h3>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Project Name</th>
                                <th>Created</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var project in Model.Projects)
                            {
                                <tr>
                                    <td>@project.Name</td>
                                    <td>@project.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        <span class="badge badge-info">
                                            @project.WorkflowSteps.LastOrDefault(s => s.Status == "Completed")?.Name
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-action="AnalyzeDocument" asp-route-projectId="@project.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.getElementById('fileInput').addEventListener('change', function(e) {
            var fileName = e.target.files[0]?.name;
            if (fileName) {
                document.getElementById('fileName').textContent = fileName;
                document.getElementById('fileInfo').style.display = 'block';
                document.getElementById('uploadBtn').style.display = 'inline-block';
            }
        });
    </script>
}

@section Styles {
    <style>
        .workflow-steps {
            padding: 20px 0;
        }
        
        .step-item {
            flex: 0 0 auto;
        }
        
        .step-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: #e9ecef;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 10px;
            font-size: 24px;
            color: #6c757d;
        }
        
        .step-icon.active {
            background: #007bff;
            color: white;
        }
        
        .step-icon.completed {
            background: #28a745;
            color: white;
        }
        
        .step-divider {
            flex: 1;
            height: 2px;
            background: #dee2e6;
            margin: 0 10px;
            align-self: center;
            margin-bottom: 30px;
        }
        
        .custom-file-upload {
            position: relative;
        }
    </style>
}